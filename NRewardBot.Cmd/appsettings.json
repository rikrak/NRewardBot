{
  "appSettings": {
    "headless": false,
    "mobile": true,
    "desktop": true,
    "quiz": true,
    "email":  true
  },
  "selenium": {
    "driverUrl": "https://chromedriver.storage.googleapis.com/LATEST_RELEASE",
    "driverLocation": "selenium"
  },
  "NLog": {
    "targets": {
      "coloredConsole": {
        "type": "ColoredConsole",
        "useDefaultRowHighlightingRules": "false",
        "layout": "[${pad:padding=5:fixedlength=true:${level:uppercase=true}}] ${message} ${exception:format=toString}",
        "rowHighlightingRules": [
          {
            "condition": "level == LogLevel.Trace",
            "foregroundColor": "DarkGray"
          },
          {
            "condition": "level == LogLevel.Debug",
            "foregroundColor": "DarkGray"
          },
          {
            "condition": "level == LogLevel.Info",
            "foregroundColor": "Gray"
          },
          {
            "condition": "level == LogLevel.Warn",
            "foregroundColor": "Yellow"
          },
          {
            "condition": "level == LogLevel.Error",
            "foregroundColor": "Red"
          },
          {
            "condition": "level == LogLevel.Fatal",
            "foregroundColor": "Red",
            "backgroundColor": "White"

          }
        ]
      },
      "debug": {
        "type": "OutputDebugString",
        "layout":
          "[${pad:padding=5:fixedlength=true:${level:uppercase=true}}] ${logger} - ${message} ${exception:format=toString}"
      },
      "file": {
        "type": "File",
        "filename":  "${basedir}/logs/logfile_${shortdate}.txt",
        "layout":
          "[${pad:padding=5:fixedlength=true:${level:uppercase=true}}] ${logger} - ${message} ${exception:format=toString}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "debug,file"
      },
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "coloredConsole"
      }
    ]
  }
}